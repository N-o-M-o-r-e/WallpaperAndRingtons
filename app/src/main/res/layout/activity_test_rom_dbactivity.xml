<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".database.TestRomDBActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Database Example"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginBottom="40dp"/>

    <!-- Buttons for ItemWallpaper -->
    <Button
        android:id="@+id/buttonAddWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Wallpaper" />

    <Button
        android:id="@+id/buttonGetWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Wallpaper" />

    <Button
        android:id="@+id/buttonDeleteWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Wallpaper" />

    <!-- Buttons for ItemLiveWallpaper -->
    <Button
        android:id="@+id/buttonAddLiveWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Live Wallpaper" />

    <Button
        android:id="@+id/buttonGetLiveWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Live Wallpaper" />

    <Button
        android:id="@+id/buttonDeleteLiveWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Live Wallpaper" />

    <!-- Buttons for ItemRingtone -->
    <Button
        android:id="@+id/buttonAddRingtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Ringtone" />

    <Button
        android:id="@+id/buttonGetRingtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Ringtone" />

    <Button
        android:id="@+id/buttonDeleteRingtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Ringtone" />
</LinearLayout>